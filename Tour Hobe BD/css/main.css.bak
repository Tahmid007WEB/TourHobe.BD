body {


  background-color: #E0E0E0;
}

.container {
  position: relative;
  margin-top: 120px;
  margin-bottom: 120px;
  box-shadow: 0px 0px 15px 2px rgba(0, 0, 0, 0.2);
  border-radius: 10px;
  overflow: hidden;
  max-width: 140px;
}

/* Image Controler */
.image-container {
  position: relative;

  background-position: bottom;
  background-repeat: no-repeat;
  background-size: cover;
  padding: 50px;
}

.image-container::after {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.78);
}

.subheading,
.heading {
  position: relative;
  z-index: 2;
}

.subheading .spacing {
  display: inline-block;
  min-height: 3px;
  min-width: 25%;
  transform: translateY(-150%);
  background-color: #842bd7;
}

.subheading .text-container .text {
  color: #ffffff;
  font-size: 13px;
  letter-spacing: 3px;
  letter-spacing: 4px;
}

.subheading .text-container .left-bracket,
.subheading .text-container .right-bracket {
  color: #842bd7;
  font-weight: 900;
  font-size: 17px;
}

.subheading .text-container .right-bracket {
  margin-left: -6px;
}

.heading {
  font-size: 55px;
  font-weight: 700;
  color: #ffffff;
  line-height: 60px;
  padding: 10px 0px 15px 0px;
}

.icon-contain {
  position: relative;
  margin-top: 43px !important;
  color: #ffffff;
  z-index: 2;
  margin-bottom: 35px !important;
}

.icon-holder {
  display: flex;
  margin-bottom: 10px;
}

.icon-holder .icon .fas {
  font-size: 25px;
  margin-right: 15px;
}

.icon-holder:hover .icon .fas {
  color: #842bd7;
  transform: scale(1.2);
}

.icon-holder .text h3 {
  font-size: 19px;
  font-weight: 600;
}

.icon-holder .text p {
  font-size: 15px;
}

.icon-holder .text p a {
  text-decoration: none;
  color: #ffffff;
  transform: 300ms;
}

.icon-holder .text p a:hover {
  color: #842bd7;
}

.icon-button {
  position: relative;
  z-index: 2;
}

/* Form Controler */
.form-container {
  padding: 50px 40px;
  background: #ffffff;
}

.message {
  text-align: center;
  font-size: 13px;
  letter-spacing: 3px;
  font-weight: 600;
  color: #842bd7;
  margin-bottom: 5px;
}

label {
  padding-bottom: 5px;
  font-size: 15px;
}

input {
  min-height: 50px;
}

.field {
  margin-top: 15px;
}

.name-container {
  margin: 0px;
}

.field-name {
  display: flex;
  justify-content: space-between;
}

.first-name,
.last-name {
  width: 48.5%;
}

.textarea {
  min-height: 100px !important;
  max-height: 320px;
}

.required-mark {
  padding-left: 5px;
  color: #842bd7;
}

input[type="submit"] {
  padding: 15px 40px;
  border-radius: 45px;
  border: none;
  background: #842bd7;
  font-weight: 600px;
  font-size: 16px;
  color: #ffffff;
  transform: 300ms;
}

input[type="submit"]:hover {
  background: #a457ec;
}

input:focus,
textarea:focus {
  border-color: rgba(132, 43, 215, .6) !important;
  box-shadow: 0 0 8px rgba(31, 26, 36, 0.6) !important;
}

.msg {
  background-color: #212529;
}

.msg p {
  text-align: center;
  color: #ffffff;
  padding: 30px 60px 20px 60px;
  font-weight: 600;
  border-bottom: 3px solid #a255eb;
}

table {
  padding: 50px;
}

.tblone.table.table-dark td {
  text-align: center !important;
  background: #fdf0f1 !important;
}

table.table.table-dark.table-hover th {
  padding: 30px 10px 20px 10px;
}

.back-button {
  text-align: center;
  background: #8c36dc !important;
  padding: 25px 0px 30px 0px;
}

.icon-button.btn input {
  background: #212529;
}

.icon-button.btn input:hover {
  background: #424547;
}